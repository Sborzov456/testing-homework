{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["src/*"]
        },
       "types": ["node", "jest", "@testing-library/jest-dom"],
 
    },
    "include": ["src", "test"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
